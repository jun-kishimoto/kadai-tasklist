<h1>タスク一覧</h1>

  <table class="table table-striped">
    <thread>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
        <th>締切</th>
      </tr>
    </thread>
    <tbody>

<% @tasks.each do |task| %>

        <tr>
          <td>
<%= link_to task.id, task %>
</td>
          <td>
<%= task.status %>
</td>
          <td>
<%= task.content %>
</td>
          <td>
<%= task.deadline %>
</td>
        </tr>

<% end %>
    </tbody>
  </table>
  <div>
<%= paginate @tasks %>
  </div>

<%= link_to "新規タスクの投稿", new_task_path, class: "btn btn-primary" %>